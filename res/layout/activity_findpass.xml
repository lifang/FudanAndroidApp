<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/F3F3F3"
    android:orientation="vertical" >

    <include layout="@layout/title_back" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/d_48dp"
            android:layout_weight="1"
            android:background="@color/F6F9FA" >

            <LinearLayout
                android:id="@+id/login_img_pass"
                android:layout_width="52dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="18dp"
                android:gravity="center" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/login_email" />
            </LinearLayout>

            <EditText
                android:id="@+id/login_edit_email"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/login_img_pass"
                android:background="@color/F6F9FA"
                android:hint="Email"
                android:maxWidth="20dp"
                android:singleLine="true"
                android:textColor="@color/t333333"
                android:textColorHint="@color/edithinit"
                android:textSize="@dimen/s_17sp" />

            <LinearLayout
                android:id="@+id/login_linear_deletemali"
                android:layout_width="@dimen/d_36dp"
                android:layout_height="@dimen/d_36dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="2dp"
                android:gravity="center"
                android:visibility="gone" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/login_delete" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_code"
            android:layout_width="110dp"
            android:layout_height="fill_parent"
            android:background="@color/F6F9FA"
            android:gravity="center"
            android:text="Sent Code"
            android:paddingRight="10dp"
            android:textColor="@drawable/text_green_w"
            android:textSize="@dimen/s_17sp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/adadad" />

    <LinearLayout
        android:id="@+id/ll_msg"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:visibility="invisible"
        android:layout_marginLeft="70dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="The Remaining"
            android:textSize="@dimen/s_13sp" />

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="15dp"
            android:text="60"
            android:textColor="@color/tv_red"
            android:textSize="@dimen/s_13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Seconds"
            android:textSize="@dimen/s_13sp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/adadad" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/d_48dp"
            android:layout_weight="1"
            android:background="@color/F6F9FA" >

            <LinearLayout
                android:id="@+id/login_img_passcode"
                android:layout_width="52dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="18dp"
                android:gravity="center" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/code" />
            </LinearLayout>

            <EditText
                android:id="@+id/login_edit_code"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/login_img_passcode"
                android:background="@color/F6F9FA"
                android:hint="Verification Code"
                android:maxWidth="20dp"
                android:singleLine="true"
                android:textColor="@color/t333333"
                android:textColorHint="@color/edithinit"
                android:textSize="@dimen/s_17sp" />

            <LinearLayout
                android:id="@+id/login_linear_deletcode"
                android:layout_width="@dimen/d_36dp"
                android:layout_height="@dimen/d_36dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="2dp"
                android:gravity="center"
                android:visibility="gone" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/login_delete" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/d_48dp"
            android:background="@color/F6F9FA" >

            <ImageView
                android:id="@+id/img_check"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_centerInParent="true"
                android:src="@drawable/check_y"
                  android:visibility="invisible"
               />
                    <ImageView
                android:id="@+id/img_check_n"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_centerInParent="true"
                android:src="@drawable/check_n"
                android:visibility="invisible"
               />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_check"
            android:layout_width="110dp"
            android:layout_height="fill_parent"
            android:background="@color/F6F9FA"
            android:gravity="center"
            android:visibility="invisible"
            android:text="Check"
            android:textColor="@drawable/text_green_w"
            android:textSize="@dimen/s_17sp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/adadad" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="58dp"
        android:orientation="horizontal"
        android:paddingBottom="15dp" >

        <TextView
            android:id="@+id/tv_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="70dp"
            android:text="Reset Your Password"
            android:textSize="@dimen/s_13sp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/adadad" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/d_48dp"
        android:background="@color/F6F9FA" >

        <LinearLayout
            android:id="@+id/login_img_lock"
            android:layout_width="52dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="18dp"
            android:gravity="center" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/login_lock" />
        </LinearLayout>

        <EditText
            android:id="@+id/login_edit_pass"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/login_img_lock"
            android:background="@color/F6F9FA"
            android:hint="New Password"
            android:inputType="textPassword"
            android:maxWidth="20dp"
            android:singleLine="true"
            android:textColor="@color/t333333"
            android:textColorHint="@color/edithinit"
            android:textSize="@dimen/s_17sp" />

        <LinearLayout
            android:id="@+id/login_linear_deletpass"
            android:layout_width="@dimen/d_36dp"
            android:layout_height="@dimen/d_36dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="2dp"
            android:gravity="center"
            android:visibility="gone" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/login_delete" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/adadad" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/d_48dp"
        android:background="@color/F6F9FA" >

        <LinearLayout
            android:id="@+id/login_img_locked"
            android:layout_width="52dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="18dp"
            android:gravity="center" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/login_locked" />
        </LinearLayout>

        <EditText
            android:id="@+id/login_edit_pass2"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/login_img_locked"
            android:background="@color/F6F9FA"
            android:hint="Confirm Password"
            android:maxWidth="20dp"
            android:singleLine="true"
                android:inputType="textPassword"
            android:textColor="@color/t333333"
            android:textColorHint="@color/edithinit"
            android:textSize="@dimen/s_17sp" />

        <LinearLayout
            android:id="@+id/login_linear_deletpass2"
            android:layout_width="@dimen/d_36dp"
            android:layout_height="@dimen/d_36dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="2dp"
            android:gravity="center"
            android:visibility="gone" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/login_delete" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/adadad" />
<LinearLayout
	    android:id="@+id/login_linear_signin" 
	    android:layout_width="match_parent"
	    android:layout_height="44dp"
	    android:layout_marginLeft="18dp"
	    android:layout_marginRight="18dp"
	    android:layout_marginTop="42dp"
	    android:background="@drawable/bg_blue_dra"
	    android:gravity="center" 
	    android:orientation="horizontal"
	    >
	 
	    <TextView 
	        
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	      
	        android:text="Sure"
	        android:textSize="@dimen/s_17sp"
	        android:textColor="@color/fffefe"
	        />
	    	     
	</LinearLayout>
</LinearLayout>