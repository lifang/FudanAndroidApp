<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/F3F3F3"
    android:orientation="vertical" >

    <include layout="@layout/title_back" />
	<ScrollView android:layout_width="fill_parent"
	    android:layout_height="wrap_content">
	    <LinearLayout android:layout_height="wrap_content"
	        android:layout_width="fill_parent"
	        android:orientation="vertical">
 
    <RelativeLayout
        android:id="@+id/rl_imgs"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
         android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:background="@color/F3F3F3" >

        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
           
             >
        </android.support.v4.view.ViewPager>

        <LinearLayout
            android:id="@+id/indicator"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >
        </LinearLayout>

         
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:background="@color/E8E8E7"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:textColor="@color/C012642"
            android:textSize="17sp" />

         
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rela_loc"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/bg_hui_sha"
        android:orientation="vertical" >
		<ImageView android:layout_height="wrap_content"
		    android:layout_width="wrap_content"
		    android:background="@drawable/location"
		    android:layout_centerVertical="true"
		    android:layout_marginLeft="12dp"
		    android:id="@+id/ll_location"
		     />
		<LinearLayout android:layout_height="wrap_content"
		    android:layout_width="wrap_content"
		    android:orientation="vertical"
		    android:layout_centerVertical="true"
		    android:layout_marginLeft="5dp"
		    android:layout_toRightOf="@id/ll_location">
		            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
          	android:textColor="@color/C464545"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="The Shop Location"
            android:textSize="8sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/location"    
             android:textColor="@color/C012642"   
            android:gravity="center"
            android:text=""
            android:maxLines="1"
            android:maxLength="20"
            android:ellipsize="end"
            android:textSize="12sp" />
		    
		    
		    
		</LinearLayout>
 <ImageView android:layout_height="wrap_content"
		    android:layout_width="wrap_content"
		    android:background="@drawable/item_left"
		    android:layout_alignParentRight="true"
		     android:layout_centerVertical="true"
		     android:layout_marginRight="10dp"
		     />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
         android:layout_marginTop="-2dp"
        android:background="@drawable/bg_hui_sha"
        android:orientation="horizontal" >
	<RelativeLayout
        android:layout_width="0dp"
       	android:layout_weight="1"
        android:layout_height="48dp"
     	android:id="@+id/rl_tel"
        android:layout_marginRight="17dp"
        android:layout_marginTop="2dp"
       
        android:orientation="vertical" >
		<ImageView android:layout_height="wrap_content"
		    android:layout_width="wrap_content"
		    android:background="@drawable/item_time"
		    android:layout_centerVertical="true"
		    android:layout_marginLeft="12dp"
		    android:id="@+id/ll_location1"
		     />
		<LinearLayout android:layout_height="wrap_content"
		    android:layout_width="wrap_content"
		    android:orientation="vertical"
		    android:layout_centerVertical="true"
		    android:layout_marginLeft="5dp"
		    android:layout_toRightOf="@id/ll_location1">
		            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
          	android:textColor="@color/C464545"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Business Hours"
            android:textSize="8sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/C012642"
           	android:id="@+id/tv_time"
            android:gravity="center"
            android:textSize="12sp" />
		    
		    
		    
		</LinearLayout>
 
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"
       	android:layout_weight="1"
        android:layout_height="48dp"
        android:layout_marginLeft="17dp"
        android:id="@+id/ri_tel"
        android:layout_marginTop="2dp"
       
        android:orientation="vertical" >
		<ImageView android:layout_height="wrap_content"
		    android:layout_width="wrap_content"
		    android:background="@drawable/tel"
		    android:layout_centerVertical="true"
		    
		     
		    android:id="@+id/ll_location2"
		     />
		<LinearLayout android:layout_height="wrap_content"
		    android:layout_width="wrap_content"
		    android:orientation="vertical"
		    android:layout_centerVertical="true"
		    android:layout_marginLeft="5dp"
		    android:layout_toRightOf="@id/ll_location2">
		            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
          	android:textColor="@color/C464545"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Contact number"
            android:textSize="8sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/tv_tel2"
           android:textColor="@color/C012642"
            android:gravity="center"
            android:textSize="12sp" />
		    
		    
		    
		</LinearLayout>
 
    </RelativeLayout>
       <ImageView android:layout_height="wrap_content"
		    android:layout_width="wrap_content"
		    android:background="@drawable/item_left"
		    android:layout_marginLeft="10dp"
		    	android:layout_gravity="center_vertical"
		     android:layout_marginRight="10dp"
		     />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="5dp"
        android:text=""
        android:textColor="@color/C464545"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/ll_join"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_blue_shape"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Join"
            android:textColor="@color/fffefe"
            android:textSize="@dimen/s_17sp" />
    </LinearLayout>
	        
	    </LinearLayout>
	</ScrollView>
</LinearLayout>