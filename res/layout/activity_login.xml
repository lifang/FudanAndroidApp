<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
 	android:orientation="vertical"
 	android:background="@color/F3F3F3" >
	<include layout="@layout/title_back"/>
    
	<View android:layout_height="0.5dp"
	    android:layout_width="fill_parent"
	    android:layout_marginTop="48dp"
	    android:background="@color/adadad"/>
	 <RelativeLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="@dimen/d_48dp"
	 	android:background="@color/F6F9FA"
	    >
	    <LinearLayout 
	    android:id="@+id/login_img_pass" 
	    android:layout_width="52dp"
	    android:layout_height="fill_parent"
  
	      android:layout_marginLeft="18dp"
	  
	    android:gravity="center"
	    >
     <ImageView 
                
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    
                  
                    android:src="@drawable/login_email"/>
	</LinearLayout>
	     
	     
	     
	     
            
 		<EditText
	    android:id="@+id/login_edit_email" 
	    android:layout_width="match_parent"
	    android:layout_height="fill_parent"
	    android:background="@color/F6F9FA"
	    android:singleLine="true"
	    android:hint="Email"
	    android:layout_centerVertical="true"
       	android:textSize="@dimen/s_17sp"
	  	android:layout_toRightOf="@id/login_img_pass"
	    android:textColor="@color/t333333"
	    android:textColorHint="@color/edithinit"
	    android:maxWidth="20dp"
	    />
	 <LinearLayout 
	    android:id="@+id/login_linear_deletemali" 
	    android:layout_width="@dimen/d_36dp"
	    android:layout_height="@dimen/d_36dp"
	    android:layout_alignParentRight="true"
	    android:layout_centerVertical="true"
	    android:layout_marginRight="2dp"
	  	android:visibility="gone"
	    android:gravity="center"
	    >
	<ImageView
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:background="@drawable/login_delete"
	    />
	</LinearLayout>
	</RelativeLayout>
	<View android:layout_height="0.5dp"
	    android:layout_width="fill_parent"
	    
	    android:background="@color/adadad"/>
	<RelativeLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="@dimen/d_48dp"
	 	android:background="@color/F6F9FA"
	    >
	    <LinearLayout 
	    android:id="@+id/login_img_pass1" 
	    android:layout_width="52dp"
	    android:layout_height="fill_parent"
  
	      android:layout_marginLeft="18dp"
	  
	    android:gravity="center"
	    >
     <ImageView 
                
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    
                  
                    android:src="@drawable/login_locked"/>
	</LinearLayout>
	     
	     
	     
	     
            
 		<EditText
	    android:id="@+id/login_edit_pass" 
	    android:layout_width="match_parent"
	    android:layout_height="fill_parent"
	    android:background="@color/F6F9FA"
	    android:singleLine="true"
	    android:hint="Confirm Password"
	    android:layout_centerVertical="true"
        	android:textSize="@dimen/s_17sp"
	  	android:layout_toRightOf="@id/login_img_pass1"
	    android:textColor="@color/t333333"
	    android:textColorHint="@color/edithinit"
	    android:maxWidth="20dp"
	    />
	 <LinearLayout 
	    android:id="@+id/login_linear_deletpass" 
	    android:layout_width="@dimen/d_36dp"
	    android:layout_height="@dimen/d_36dp"
	    android:layout_alignParentRight="true"
	    android:layout_centerVertical="true"
	    android:layout_marginRight="2dp"
	    	android:visibility="gone"
	    android:gravity="center"
	    >
	<ImageView
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:background="@drawable/login_delete"
	    />
	</LinearLayout>
	</RelativeLayout>
	<View android:layout_height="0.5dp"
	    android:layout_width="fill_parent"
	 
	    android:background="@color/adadad"/>
	<TextView 
	    android:id="@+id/tv_password"
	    android:layout_height="wrap_content"
	    android:layout_width="fill_parent"
	    android:layout_marginLeft="70dp"
	    android:textColor="@drawable/text_b_w"
	    android:paddingTop="@dimen/d_15dp"
	    android:textSize="@dimen/s_13sp"
	    android:text="I forgot my password!"/>
	<LinearLayout
	    android:id="@+id/login_linear_signin" 
	    android:layout_width="match_parent"
	    android:layout_height="44dp"
	    android:layout_marginLeft="18dp"
	    android:layout_marginRight="18dp"
	    android:layout_marginTop="50dp"
	    android:background="@drawable/bg_blue_dra"
	    android:gravity="center" 
	    android:orientation="horizontal"
	    >
	 
	    <TextView 
	         
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	      
	        android:text="Sign"
	        android:textSize="@dimen/s_17sp"
	        android:textColor="@color/fffefe"
	        />
	    	    <TextView 
	     
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="@dimen/d_7dp"
	        android:text="In"
	        android:textSize="@dimen/s_17sp"
	        android:textColor="@color/fffefe"
	        />
	</LinearLayout>
	<LinearLayout
	    android:id="@+id/login_linear_signup" 
	    android:layout_width="match_parent"
	    android:layout_height="44dp"
	    android:layout_marginLeft="18dp"
	    android:layout_marginRight="18dp"
	    android:layout_marginTop="20dp"
	    android:background="@drawable/bg_yel_dra"
	    android:gravity="center" 
	    android:orientation="horizontal"
	    >
	 
	    <TextView 
	         
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	      
	        android:text="Sign"
	        android:textSize="@dimen/s_17sp"
	        android:textColor="@color/fffefe"
	        />
	    	    <TextView 
	     
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="@dimen/d_7dp"
	        android:text="Up"
	        android:textSize="@dimen/s_17sp"
	        android:textColor="@color/fffefe"
	        />
	</LinearLayout>
</LinearLayout>
